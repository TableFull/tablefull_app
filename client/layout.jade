body
 html
  body
    nav#siteNavBar.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navCollapse' aria-expanded='false')
            span.sr-only Toggle navigation
            br
            span.icon-bar
            span.icon-bar
            span.icon-bar

          a#navbarBrand.navbar-brand(href='/') LonelyTable

        // Collect the nav links, forms, and other content for toggling
        #navCollapse.collapse.navbar-collapse
          ul.nav.navbar-nav.notLayout
            li
              a(href='/venues') Venues 
            li
              a(href='/getstarted') Get Started
            li
              a(href='/about') About
            li
              a(href='/contact') Contact  

            if(user)
             li#bigProblem.dropdown.nav-pill.nav-pill.notLayout
              a#yourAccount.dropdown-toggle.nav-pill(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Your Account 
                span.caret
              ul.dropdown-menu
                li
                  a(href='/users/#{user.id}') My Profile 
                  //- user.id
                li
                  a(href='/myres') My Reservations
                li
                  a(href='#') Inbox
                li.divider(role='separator')
                li
                  a(href='/auth/logout') Log Out
            else 
             button#fb_icon.btn.btn-facebook
              a(href='/auth/facebook')
               //- i.fa.fa-facebook
               | Sign in with Facebook
        // /.navbar-collapse
      // /.container-fluid
 
  div#notLayout.container-fluid
    if(user)
      div#welcome
        h2 Welcome, #{user.username}
      div#line
        hr
    block content